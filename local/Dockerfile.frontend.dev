# Development Dockerfile for Next.js Frontend (Git-based deployment)
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy entrypoint script
COPY docker-entrypoint-frontend-dev.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint-frontend-dev.sh

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Change ownership of app directory
RUN chown -R nextjs:nodejs /app

# Switch to non-root user
USER nextjs

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV WATCHPACK_POLLING=true

# Use custom entrypoint
ENTRYPOINT ["docker-entrypoint-frontend-dev.sh"]

# Default command
CMD ["npm", "run", "dev"]