# Docker Environment Configuration Template
# Copy this file to .env in backend directory and modify as needed

# Application
APP_NAME=Amaso
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=http://localhost:8000
SANCTUM_STATEFUL_DOMAINS=localhost:3000
SESSION_DOMAIN=localhost

# Database (Docker Container)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=amaso
DB_USERNAME=amaso_user
DB_PASSWORD=amaso_password

# Cache, Session, Queue (using database)
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Mail (Development - using log)
MAIL_MAILER=log

# Disable Laravel telescope in production
TELESCOPE_ENABLED=false

# Application specific
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

BCRYPT_ROUNDS=12
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Vite
VITE_APP_NAME="${APP_NAME}"