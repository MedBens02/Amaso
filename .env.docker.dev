# Docker Development Environment Configuration Template
# Copy this file to .env in backend directory for development

# Application
APP_NAME=Amaso
APP_ENV=local
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost:8000
SANCTUM_STATEFUL_DOMAINS=localhost:3000
SESSION_DOMAIN=localhost

# Database (Docker Container)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=amaso
DB_USERNAME=amaso_user
DB_PASSWORD=password

# Cache, Session, Queue (using database)
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Mail (Development - using log)
MAIL_MAILER=log

# Development settings
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Application specific
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

BCRYPT_ROUNDS=12
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Vite
VITE_APP_NAME="${APP_NAME}"

# Development features
TELESCOPE_ENABLED=true